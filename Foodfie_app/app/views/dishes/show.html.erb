<div class='container-fluid'>
  <div class='row'>
    <%= render 'header' %>
  </div>
  <div class='row dish'>
    <div class='col-md-1'>
    </div>
    <div class='col-md-3 col-lg-3 col-sm-3  dish-details'>
      <p><strong>Dish Name:</strong> <%= @dish.name %></p>
      <p><strong>Price: </strong> <%= @dish.price %></p>
      <p><strong>Category: </strong> <%= @dish.category.name %></p>
      <p><strong>Rating: </strong> <%=  rating(@dish.ratings) %></p>
      <p><strong>Restaurant Name:</strong> <%= @dish.restaurants.first.name %></p>
      <p><strong>Restarurant Address:</strong> <%= @dish.restaurants.first.address  %></p>
      <p><strong>Contact:</strong> <%= @dish.restaurants.first.mobile %></p>
      <p><strong>Description:</strong> <%= @dish.description %></p>
    </div>
    <div class='col-md-7  col-lg-7 col-sm-9 col-md-offset-1 dish-img'>
      <% @dish.images.each do |dishimage| %>
        <%= image_tag dishimage.image.to_s %>
      <% end %>
    </div>
  </div>
</div>