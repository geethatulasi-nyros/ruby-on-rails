<div class="container">
	<div class="row new">
		<div class="row create">
		 	<h2 class="btn btn-info">Create Article</h2>
		</div>
		  <%=bootstrap_form_with scope: :article,
		  :html => {:class => "form-horizontal center col-md-10"},url:create_article_path,local: true do |form| %>
		  	<% if @article.errors.any? %>
			    <div id="error_explanation">
				     <h2>
				      	<%= pluralize(@article.errors.count, "error") %>
				        	prohibited this article from being saved:
				      </h2>
				      <ul>
					       <% @article.errors.full_messages.each do |msg| %>
					        <li><%= msg %></li>
					       <% end %>
				      </ul>
			    </div>
		  	<% end %>
		  	<p>
					<%= form.text_field :name, class: "text"%>
				</p>
				<p>
						<%= form.text_area :description, :size => "30x6", class: "text"%>
				</p>
				<p>
					<%= form.select(:category_id,options_for_select([['Technology','Technology'],['Health','Health'],['Photography','Photography'],['Movies','Movies'],['Food','Food'],['Science','Science'],['Innovation','Innovation'],['Sports','Sports']]),{}, {:class => 'form-control'})%>
				</p>
				<p>
					<%= form.check_box :published %>
				</p>
				<p>
					<%= form.file_field :image %>
				</p>
					<a href="/" class="btn btn-warning" style="margin-left:50px">back</a>
				<%= form.submit "submit", class: "btn btn-success btn-sus" %>
			<%end%>
	 	</div>
</div>
 
  