<div class="articles">
  <%= image_tag ("/assets/ruby.jpeg"), class: "img-responsive"%>
  <h2>Listing Articles</h2>
  <span id="create-link"> 
    <%= link_to 'Create Article',new_article_url %>
  </span>
  <table class="table">
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3">Actions</th>
    </tr>
    <% @articles.each do |article| %>
      <tr>
        <td class="title">
          <%= link_to article.title, article_path(article) %>
        </td>
        <td><%= article.text %></td>
        <td class="button">
          <%= link_to 'Show', article_path(article) %>
        </td>
        <td class="button edit">
          <%= link_to 'Edit', edit_article_path(article) %>
        </td>
        <td class="button destroy">
          <%= link_to 'Destroy', delete_article_path(article),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>